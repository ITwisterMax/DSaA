program Laba1;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils;

type
  PointerMan = ^Element;
  Element = record
    Data : Integer;
    AdrNext : PointerMan;
  end;

var
  First : PointerMan;
  N, K : Integer;

procedure input;
begin
  Write('Введите количество человек N (от 1 до 64): ');
  repeat
    ReadLn(N);
    if (N < 1) or (N > 64)  then
      Write('Ошибка! Повторите ввод... ');
  until (N >= 1) and (N <= 64);

  Write('Введите номер K-тых людей, которых хотите удалить: ');
  repeat
    ReadLn(K);
    if (K < 1) or (K > N)  then
      Write('Ошибка! Повторите ввод... ');
  until (K >= 1) and (K <= N);
end;

procedure make (x : PointerMan; N : Integer);
var
  i : Integer;
begin
  New(x);
  for i := 1 to N do
    begin
      New(x^.AdrNext);
      x := x^.AdrNext;
      x^.Data := i;
    end;
  x^.AdrNext := nil;
end;

procedure delete(x : PointerMan; N, K : Integer);
var
  i, Number : Integer;
begin
  Number := 1;
  repeat
    for i := 1 to K do
      x := x^.AdrNext;
    x^.AdrNext := x^.AdrNext^.AdrNext;
    Dispose(x);
  until Number <= N;
end;

procedure output(x : PointerMan);
begin
  while x^.AdrNext <> nil do
    begin
      Write (x^.Data, ' ');
      x := x^.AdrNext;
    end;

end;
begin
  input;
  make(First, N);
  output(First);
  //delete(First, N, K);
  //output(First);
  ReadLn;
end.
